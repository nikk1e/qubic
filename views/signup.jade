extends layout

block vars
  - var bodyClass = 'signup-page access-page has-full-screen-bg';

block content
    .upper-wrapper
      // ******HEADER******
      header.header
        .container
          h1.logo
            a(href='/')
              span.logo-icon
              span.text Qubic
      // ******Signup Section******
      section.signup-section.access-section.section
        .container
          .row
            .form-box.col-md-8.col-sm-12.col-xs-12.col-md-offset-2.col-sm-offset-0.xs-offset-0
              .form-box-inner
                h2.title.text-center Sign up now
                |   
                |                             
                p.intro.text-center It only takes 3 minutes!
                |                
                |                             
                .row
                  .form-container.col-md-5.col-sm-12.col-xs-12
                    form.signup-form(action='/signup',method='post')
                      .form-group.email
                        label.sr-only(for='signup-email') Your email
                        |                                             
                        input#signup-email.form-control.login-email(type='email', placeholder='Your email', name='email')
                      // //form-group
                      .form-group.password
                        label.sr-only(for='signup-password') Your password
                        |                                             
                        input#signup-password.form-control.login-password(type='password', placeholder='Password', name='password')
                      // //form-group
                      button.btn.btn-block.btn-cta-primary(type='submit') Sign up
                      |                                         
                      p.note By signing up, you agree to our terms of services and privacy policy.
                      |                                         
                      p.lead
                        | Already have an account? 
                        a#login-link.login-link(href='/login') Log in
                  // //form-container
                  .social-btns.col-md-5.col-sm-12.col-xs-12.col-md-offset-1.col-sm-offset-0.col-sm-offset-0
                    .divider
                      span Or
                    |                       
                    |                                     
                    ul.list-unstyled.social-login
                      li
                        a.twitter-btn.btn(href='/auth/twitter')
                          i.fa.fa-twitter
                          | Sign up with Twitter
                      |                                         
                      li
                        a.facebook-btn.btn(href='/auth/facebook')
                          i.fa.fa-facebook
                          | Sign up with Facebook
                      |                                         
                      li
                        a.github-btn.btn(href='/auth/github')
                          i.fa.fa-github-alt
                          | Sign up with Github
                      |                                         
                      li
                        a.google-btn.btn(href='/auth/google')
                          i.fa.fa-google-plus
                          | Sign up with Google
                    |                                     
                    p.note Don&apos;t worry, we won&apos;t post anything without your permission.