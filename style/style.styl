.editor {
	position: relative;
	/*white-space: pre-wrap;*/
}

.selected {
	background: rgb(179,216,253);
}

table.pure-table td.selected,
table.pure-table th.selected,
td.selected,
th.selected {
	background: rgb(179,216,253);
}

span {
	padding-bottom: 5px;
	padding-top: 3px;
}

span.cursor {

	padding-bottom: 5px;
	padding-top: 3px;
	margin: -1px;
	border: 1px solid red;
	z-index: 100;
}

sup, sub {
  font-size: 0.7em;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
  top: -0.4em;
}
sub {
	top: 0.4em;
}

sup span {
	padding-bottom: 11px;
}
sub span {
	padding-top: 12.5px;
}

.selection {
	top: 0px;
	left: 0px;
	z-index: 100;
}

.selection div {
	position: absolute;
	background: rgba(114,190,215,0.5);
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

.import {
	padding: 1em;
	background: #f4f4f4;
	font-family: monospace;
	position: relative;
}

.import + .import,
.include + .import {
	padding-top: 0;
	margin-top: -0.8em;
}

.import .right-icon {
	color: #aaa;
	position: absolute;
	right: 1em;
}

.import .right-icon:hover {
	color: #000;
}

.import .error {
	color: red;
}

.import:before {
	content: '@import ';
	color: #aaa;
}

.include {
	padding: 1em;
	background: #f4f4f4;
	font-family: monospace;
	position: relative;
}

.include + .include,
.import + .include {
	padding-top: 0;
	margin-top: -0.8em;
}

.include .right-icon {
	color: #aaa;
	position: absolute;
	right: 1em;
}

.include .right-icon:hover {
	color: #000;
}

.include .error {
	color: red;
}

.include:before {
	content: '@include ';
	color: #aaa;
}

pre {
	padding: 1em;
	background: rgba(0,0,0,0.05);
}

.message {
	background: rgb(255, 165, 0);
	position: relative;
	padding: 0.5em;
	padding-top: 0;
}
